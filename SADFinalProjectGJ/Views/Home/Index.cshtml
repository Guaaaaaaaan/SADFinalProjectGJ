@{
    ViewData["Title"] = "IGPTS Home";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="jumbotron text-center bg-light p-5 rounded-3 mb-5">
    <h1 class="display-4 fw-bold text-primary">IGPTS System</h1>
    <p class="lead">Invoice Generation & Payment Tracking System</p>
    <hr class="my-4">
    <p>Efficiently manage invoices, track payments, and streamline your financial workflow.</p>

    <div class="mt-4">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="alert alert-success d-inline-block">
                Welcome back, <strong>@User.Identity.Name</strong>!
            </div>
            <div class="mt-3">
                <a class="btn btn-primary btn-lg px-5" href="/DashBoard" role="button">
                    <i class="bi bi-speedometer2"></i> Go to Dashboard
                </a>
            </div>
        }
        else
        {
            <p class="text-muted">Please login to access the system.</p>
            <a class="btn btn-primary btn-lg me-2" href="/Identity/Account/Login" role="button">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
            <a class="btn btn-outline-secondary btn-lg" href="/Identity/Account/Register" role="button">
                <i class="bi bi-person-plus"></i> Register
            </a>
        }
    </div>
</div>

<div class="row text-center">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <div class="text-primary mb-3"><i class="bi bi-receipt" style="font-size: 2rem;"></i></div>
                <h5 class="card-title">Smart Invoicing</h5>
                <p class="card-text text-muted">Create professional invoices with automated calculations and tax handling.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <div class="text-success mb-3"><i class="bi bi-credit-card" style="font-size: 2rem;"></i></div>
                <h5 class="card-title">Payment Tracking</h5>
                <p class="card-text text-muted">Real-time status updates from "Pending" to "Paid" with integrated gateways.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <div class="text-warning mb-3"><i class="bi bi-graph-up" style="font-size: 2rem;"></i></div>
                <h5 class="card-title">Financial Reports</h5>
                <p class="card-text text-muted">Generate detailed aging reports and revenue summaries instantly.</p>
            </div>
        </div>
    </div>
</div>