@model IEnumerable<SADFinalProjectGJ.Models.SystemSetting>
@{
    ViewData["Title"] = "System Settings";
}

<div class="container mt-4">
    <h2>⚙️ System Settings</h2>
    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Setting</th>
                <th>Description</th>
                <th>Value</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>@item.Description</td>
                    <td>
                        <form asp-action="Update" method="post" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="text" name="value" value="@item.Value" class="form-control form-control-sm" style="width: 100px;" />
                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>