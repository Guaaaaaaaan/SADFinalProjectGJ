@model SADFinalProjectGJ.Models.Invoice

@{
    ViewData["Title"] = "Invoice Details";

    // 👇👇👇 新增这段计算代码 👇👇👇
    decimal gstPercentage = 0;
    if (Model.TotalAmount > 0)
    {
        // 反推税率：(税额 ÷ 总额) × 100，并保留2位小数
        gstPercentage = Math.Round((Model.TaxAmount / Model.TotalAmount) * 100, 2);
    }
}

<style>
    /* 这里的样式只会在打印或"另存为PDF"时生效 */
    @@media print {
        /* 隐藏不需要打印的东西：导航栏、按钮、页脚 */
        header, footer, .btn-toolbar, .no-print

    {
        display: none !important;
    }
    /* 调整页面边距 */
    body {
        margin: 0;
        padding: 0;
        background-color: white;
    }

    .container {
        width: 100% !important;
        max-width: 100% !important;
        box-shadow: none !important;
        border: none !important;
    }

    }

    /* 屏幕显示的样式 */
    .invoice-box {
        background: white;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
    }
</style>


<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="d-flex align-items-center gap-2 no-print">

            @* 1. 草稿状态下的操作按钮 *@
            @* @if (Model.Status == "Draft" && (User.IsInRole("Admin") || User.IsInRole("FinanceStaff"))) *@
            @if (Model.Status == InvoiceStatus.Draft && (User.IsInRole("Admin") || User.IsInRole("FinanceStaff"))) 
            {
                <a asp-action="Edit" asp-route-id="@Model?.InvoiceId" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>

                <form asp-action="SendInvoice" asp-route-id="@Model.InvoiceId" method="post"
                      onsubmit="return confirm('Are you sure you want to send this invoice via email?');"
                      class="m-0">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send-fill"></i> Send Invoice
                    </button>
                </form>
            }
            @* 2. 已发送状态下的提示按钮 *@
            @* else if (Model.Status == "Sent") *@
            else if (Model.Status == InvoiceStatus.Draft)
            {
                <button class="btn btn-outline-success" disabled>
                    <i class="bi bi-check-circle-fill"></i> Invoice Sent
                </button>
            }

            @* 3. 支付按钮 (只要没付款且不是草稿，通常都允许支付，或者是 Overdue) *@
            @if (Model.Status != InvoiceStatus.Paid && Model.Status != InvoiceStatus.Draft)
            {
                <a asp-controller="Payments"
                   asp-action="Create"
                   asp-route-invoiceId="@Model.InvoiceId"
                   class="btn btn-success">
                    <i class="bi bi-credit-card-2-front-fill"></i> Pay Now
                </a>
            }

            @* 4. 打印按钮 *@
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer-fill"></i> Print / PDF
            </button>

        </div>
    </div>

    <div class="invoice-box card">
        <div class="card-body">
            <div class="row mb-5">
                <div class="col-8">
                    <h2 class="text-primary fw-bold">IGPTS INC.</h2>
                    <p class="mb-0">123 Tech Park Road</p>
                    <p class="mb-0">Singapore, 123456</p>
                    <p>Email: billing@igpts.com</p>
                </div>
                <div class="col-4 text-end">
                    <h1 class="fw-bold text-dark">INVOICE</h1>
                    <h5 class="text-muted">#@Model.InvoiceNumber</h5>
                    <br>
                    <p class="mb-1"><strong>Issue Date:</strong> @Model.IssueDate.ToShortDateString()</p>
                    <p class="mb-1"><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
                    <p class="mb-0">
                        <strong>Status:</strong>
                        <span class="badge @(Model.Status == InvoiceStatus.Paid ? "bg-success" : "bg-warning text-dark")">
                            @Model.Status
                        </span>
                    </p>
                </div>
            </div>

            <div class="row mb-5 border-top pt-4">
                <div class="col-6">
                    <h5 class="fw-bold text-secondary">Bill To:</h5>
                    <h4 class="fw-bold">@Model.Client?.Name</h4>
                    <p class="mb-0">@Model.Client?.CompanyName</p>
                    <p class="mb-0">@Model.Client?.Address</p>
                    <p>@Model.Client?.Phone</p>
                </div>
            </div>

            <table class="table table-striped table-bordered mt-4">
                <thead class="table-dark">
                    <tr>
                        <th>Item Description</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-center">Qty</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.InvoiceItems != null && Model.InvoiceItems.Any())
                    {
                        foreach (var item in Model.InvoiceItems)
                        {
                            <tr>
                                <td>@(item.Item?.Description ?? "Unknown Item")</td>
                                <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.Total.ToString("C")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4" class="text-center">No items found</td></tr>
                    }
                </tbody>
            </table>

            <div class="row justify-content-end mt-4">
                <div class="col-md-5">
                    <table class="table table-borderless">
                        <tr>
                            <td class="text-end fw-bold">Subtotal:</td>
                            <td class="text-end">@Model.TotalAmount.ToString("C")</td>
                        </tr>
                        <tr>
                            <td class="text-end fw-bold">Tax (@gstPercentage.ToString("0.##")%):</td>
                            <td class="text-end">@Model.TaxAmount.ToString("C")</td>
                        </tr>  
                        <tr class="border-top border-dark">
                            <td class="text-end fw-bold fs-4">Grand Total:</td>
                            <td class="text-end fw-bold fs-4 text-primary">
                                @((Model.TotalAmount + Model.TaxAmount).ToString("C"))
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="mt-5 pt-4 border-top text-center text-muted fs-6">
                <p>Thank you for your business!</p>
                <p>Payment is due within 14 days. Please include the invoice number on your check.</p>
            </div>
        </div>
    </div>
</div>