@model IEnumerable<SADFinalProjectGJ.Models.Invoice>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Invoices Dashboard";
    var currentUser = await UserManager.GetUserAsync(User);
    var isClient = User.IsInRole("Client");
}
@if (ViewData["CurrentFilter"] != null)
{
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-counterclockwise"></i> Clear Search & Show All
        </a>
    </div>
}

<!-- 引入 Bootstrap Icons (如果你的 Layout 还没引入的话) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    /* 自定义样式微调 */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: transform 0.2s;
    }

    .invoice-card-header {
        background: transparent;
        border-bottom: 1px solid #eee;
        padding: 1.5rem;
    }

    .table th {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #8898aa;
        border-bottom: 1px solid #e9ecef !important;
    }

    .table td {
        vertical-align: middle;
        font-size: 0.95rem;
        color: #525f7f;
    }

    /* 新的按钮样式微调 */
    .btn-group-sm > .btn, .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

    /* 让表格里的按钮垂直居中对齐 */
    .action-column {
        white-space: nowrap; /* 防止按钮换行 */
    }
</style>

<div class="container-fluid py-4">

    <!-- 第一部分：顶部统计栏 (可选功能) -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Total Invoices</p>
                            <h4 class="font-weight-bolder">@Model.Count()</h4>
                        </div>
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-file-earmark-text fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Drafts</p>
                            <h4 class="font-weight-bolder text-danger">@Model.Count(i => i.Status == "Draft")</h4>
                        </div>
                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-pencil-square fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Paid</p>
                            <h4 class="font-weight-bolder text-success">@Model.Count(i => i.Status == "Paid")</h4>
                        </div>
                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-check-lg fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 第二部分：主表格 -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header invoice-card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Invoice List</h5>

                    <!-- 只有非 Client (比如 Admin/Finance) 才能创建发票 -->
                    @if (!isClient)
                    {
                        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                            <i class="bi bi-plus-lg me-1"></i> New Invoice
                        </a>
                    }
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 table-hover">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Invoice #</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm font-weight-bold">@item.InvoiceNumber</h6>
                                            </div>
                                        </td>
                                        <td>
                                            <!-- 如果 Client 对象不为空，显示名字或邮箱 -->
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@(item.Client?.Name ?? "Unknown")</h6>
                                                    <p class="text-xs text-secondary mb-0">@(item.Client?.AccountEmail)</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-secondary text-xs font-weight-bold">@item.IssueDate.ToShortDateString()</span>
                                        </td>
                                        <td>
                                            <!-- 显示总金额 (金额+税) -->
                                            @{
                                                var total = item.TotalAmount + item.TaxAmount;
                                            }
                                            <span class="text-dark text-sm font-weight-bold">@total.ToString("C")</span>
                                        </td>
                                        <td>
                                            <!-- 你的核心需求：状态颜色 -->
                                            @{
                                                var statusColor = item.Status switch
                                                {
                                                    "Paid" => "success",   // 绿色
                                                    "Draft" => "danger",   // 红色
                                                    "Sent" => "warning",   // 黄色
                                                    _ => "secondary"       // 灰色
                                                };

                                                // 如果是 warning，文字用深色更清晰
                                                var textColor = item.Status == "Sent" ? "text-dark" : "text-white";
                                            }
                                            <span class="badge rounded-pill bg-@statusColor @textColor">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td class="text-end pe-4 action-column">
                                            <!-- 操作按钮组：现在使用实体按钮样式 -->

                                            <div class="btn-group" role="group" aria-label="Invoice Actions">

                                                <!-- 1. 查看详情 (改为蓝色描边按钮) -->
                                                <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="bi bi-eye-fill"></i> View
                                                </a>

                                                <!-- 2. 支付按钮 (仅 Client 且 状态不是 Draft/Paid 可见，绿色实心) -->
                                                @if (isClient && item.Status != "Paid" && item.Status != "Draft")
                                                {
                                                    <a asp-controller="Payments" asp-action="Create" asp-route-invoiceId="@item.InvoiceId" class="btn btn-success btn-sm" title="Pay Now">
                                                        <i class="bi bi-credit-card-fill me-1"></i> Pay
                                                    </a>
                                                }

                                                <!-- 3. 编辑/删除 (仅 Admin/FinanceStaff 且 状态是 Draft 时可见) -->
                                                @if (!isClient && item.Status == "Draft")
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-outline-secondary btn-sm" title="Edit">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>