@model IEnumerable<SADFinalProjectGJ.Models.Invoice>
@using Microsoft.AspNetCore.Identity
@using SADFinalProjectGJ.Models
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Invoices Dashboard";
    var currentUser = await UserManager.GetUserAsync(User);
    var isClient = User.IsInRole("Client");
}

<style>
    /* 自定义样式微调 */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: transform 0.2s;
    }

    .invoice-card-header {
        background: transparent;
        border-bottom: 1px solid #eee;
        padding: 1.5rem;
    }

    .table th {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #8898aa;
        border-bottom: 1px solid #e9ecef !important;
    }

    .table td {
        vertical-align: middle;
        font-size: 0.95rem;
        color: #525f7f;
    }

    /* 新的按钮样式微调 */
    .btn-group-sm > .btn, .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
    }

    /* 让表格里的按钮垂直居中对齐 */
    .action-column {
        white-space: nowrap; /* 防止按钮换行 */
    }
</style>

<div class="card mb-4 shadow-sm">
    <div class="card-body p-3">
        <form asp-action="Index" method="get">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted mb-1">Keywords</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-start-0" placeholder="Invoice #, Client..." />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted mb-1">Min $</label>
                    <input type="number" name="minAmount" value="@ViewData["MinAmount"]" class="form-control" placeholder="0.00" step="0.01" />
                </div>

                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted mb-1">Max $</label>
                    <input type="number" name="maxAmount" value="@ViewData["MaxAmount"]" class="form-control" placeholder="No Limit" step="0.01" />
                </div>

                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <i class="bi bi-funnel-fill"></i> Filter
                    </button>

                    @if (ViewData["CurrentFilter"] != null || ViewData["MinAmount"] != null || ViewData["MaxAmount"] != null)
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary" title="Clear Search">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }

                    @if ((bool?)ViewData["ShowArchived"] == true)
                    {
                        <a asp-action="Index" asp-route-showArchived="false" class="btn btn-secondary flex-grow-1">
                            <i class="bi bi-arrow-left"></i> Active
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" asp-route-showArchived="true" class="btn btn-outline-secondary flex-grow-1" title="View Archived Invoices">
                            <i class="bi bi-archive"></i> Archived
                        </a>
                    }
                </div>
            </div>

            @if (ViewData["ShowArchived"] != null)
            {
                <input type="hidden" name="showArchived" value="@ViewData["ShowArchived"]?.ToString().ToLower()" />
            }
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-x-circle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container-fluid py-4">

    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Total Invoices</p>
                            <h4 class="font-weight-bolder">@Model.Count()</h4>
                        </div>
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-file-earmark-text fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Drafts</p>
                            @* 🔥 修复 1: 使用枚举判断 *@
                            <h4 class="font-weight-bolder text-danger">@Model.Count(i => i.Status == InvoiceStatus.Draft)</h4>
                        </div>
                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-pencil-square fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-uppercase font-weight-bold text-muted">Paid</p>
                            @* 🔥 修复 2: 使用枚举判断 *@
                            <h4 class="font-weight-bolder text-success">@Model.Count(i => i.Status == InvoiceStatus.Paid)</h4>
                        </div>
                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width:48px; height:48px;">
                            <i class="bi bi-check-lg fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header invoice-card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Invoice List</h5>
                    @if (!isClient)
                    {
                        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                            <i class="bi bi-plus-lg me-1"></i> New Invoice
                        </a>
                    }
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 table-hover">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Invoice #</th>
                                    <th>Client</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm font-weight-bold">@item.InvoiceNumber</h6>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@(item.Client?.Name ?? "Unknown")</h6>
                                                    <p class="text-xs text-secondary mb-0">@(item.Client?.AccountEmail)</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-secondary text-xs font-weight-bold">@item.IssueDate.ToShortDateString()</span>
                                        </td>
                                        <td>
                                            @{
                                                var total = item.TotalAmount + item.TaxAmount;
                                            }
                                            <span class="text-dark text-sm font-weight-bold">@total.ToString("C")</span>
                                        </td>
                                        <td>
                                            @{
                                                // 🔥 修复 3: 使用枚举 Switch
                                                var statusColor = item.Status switch
                                                {
                                                    InvoiceStatus.Paid => "success",    // 绿色
                                                    InvoiceStatus.Draft => "secondary",    // 灰色
                                                    InvoiceStatus.Sent => "warning",    // 黄色
                                                    InvoiceStatus.Overdue => "danger",  // 逾期红色
                                                    InvoiceStatus.Cancelled => "dark",  // 取消深灰
                                                    _ => "secondary"
                                                };

                                                // 🔥 修复 4: 使用枚举判断文本颜色
                                                var textColor = item.Status == InvoiceStatus.Sent ? "text-dark" : "text-white";
                                            }
                                            <span class="badge rounded-pill bg-@statusColor @textColor">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td class="text-end pe-4 action-column">
                                            <div class="btn-group" role="group" aria-label="Invoice Actions">

                                                <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="bi bi-eye-fill"></i>
                                                </a>

                                                @* 🔥 修复 5: 使用枚举判断支付按钮显示逻辑 *@
                                                @if (isClient && item.Status != InvoiceStatus.Paid && item.Status != InvoiceStatus.Draft)
                                                {
                                                    <a asp-controller="Payments" asp-action="Create" asp-route-invoiceId="@item.InvoiceId" class="btn btn-success btn-sm" title="Pay Now">
                                                        <i class="bi bi-credit-card-fill me-1"></i>
                                                    </a>
                                                }

                                                @if (!isClient)
                                                {
                                                    // 🔥 修复 6: 使用枚举判断编辑按钮
                                                    if (!item.IsArchived && item.Status == InvoiceStatus.Draft)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-outline-secondary btn-sm" title="Edit">
                                                            <i class="bi bi-pencil-fill"></i>
                                                        </a>
                                                    }

                                                    if (item.IsArchived)
                                                    {
                                                        <form asp-action="Restore" asp-route-id="@item.InvoiceId" method="post" style="display:inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-success btn-sm" title="Restore">
                                                                <i class="bi bi-arrow-counterclockwise"></i>
                                                            </button>
                                                        </form>

                                                        @if (User.IsInRole("Admin"))
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-outline-danger btn-sm" title="Permanent Delete">
                                                                <i class="bi bi-trash-fill"></i>
                                                            </a>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="Archive" asp-route-id="@item.InvoiceId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to archive this invoice?');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-warning btn-sm" title="Archive (Soft Delete)">
                                                                <i class="bi bi-archive-fill"></i>
                                                            </button>
                                                        </form>

                                                        @if (User.IsInRole("Admin"))
                                                        {
                                                            <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-outline-danger btn-sm" title="Permanent Delete">
                                                                <i class="bi bi-trash-fill"></i>
                                                            </a>
                                                        }
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>