@model IEnumerable<SADFinalProjectGJ.Models.Client>

@{
    ViewData["Title"] = "Client Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Client Management</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Create New Client
        </a>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white py-3 border-0">
            <h5 class="m-0 font-weight-bold text-primary">Client List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-nowrap mb-0 align-middle">
                    <thead class="table-light text-muted">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.User)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @Html.DisplayFor(modelItem => item.User.Id)
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-initials bg-light text-primary rounded-circle me-2 d-flex justify-content-center align-items-center" style="width: 35px; height: 35px; font-weight: bold;">
                                            @item.Name?.Substring(0, 1).ToUpper()
                                        </div>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.Address">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>