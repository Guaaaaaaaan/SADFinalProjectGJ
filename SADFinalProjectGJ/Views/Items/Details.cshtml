@model SADFinalProjectGJ.Models.Item

@{
    ViewData["Title"] = "Item Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 text-center h-100">
                <div class="card-body p-5 d-flex flex-column align-items-center">

                    <div class="mb-4">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-box-seam fs-1"></i>
                        </div>
                    </div>

                    <h2 class="card-title fw-bold text-dark mb-1">@Html.DisplayFor(model => model.Description)</h2>
                    <p class="text-muted small text-uppercase fw-bold mb-4">Item Description</p>

                    <div class="display-5 fw-bold text-success mb-5">
                        @Html.DisplayFor(model => model.UnitPrice)
                        <span class="fs-6 text-muted fw-normal d-block">Unit Price</span>
                    </div>

                    <div class="d-grid gap-2 w-100 mt-auto">
                        <a asp-action="Edit" asp-route-id="@Model?.ItemId" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                            Edit Item
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill border-0">
                            Back to Catalog
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3 text-muted small">
                    Item ID: #@Model?.ItemId
                </div>
            </div>
        </div>
    </div>
</div>