@model SADFinalProjectGJ.Models.Payment

@{
    ViewData["Title"] = "Pay Invoice";
}

<h1>Make Payment</h1>

<h3>Paying for Invoice: @ViewBag.InvoiceNumber</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* ✅ 隐藏 InvoiceId，不让用户改 *@
            <input type="hidden" asp-for="InvoiceId" />

            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                @* ✅ 设为只读，防止用户修改金额 *@
                <input asp-for="Amount" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Method" class="control-label">Payment Method</label>
                <select asp-for="Method" class="form-control">
                    <option value="Credit Card">Credit Card</option>
                    <option value="PayPal">PayPal</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TransactionId" class="control-label">Transaction ID (Optional)</label>
                <input asp-for="TransactionId" class="form-control" placeholder="e.g. TXN-123456" />
            </div>

            @* 默认状态 Completed *@
            <input type="hidden" asp-for="Status" value="Completed" />

            <div class="form-group mt-3">
                <input type="submit" value="Confirm Payment" class="btn btn-success" />
                <a asp-controller="Invoices" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}